<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="28dp"
        android:text="@string/app_title"/>

    <TextView
        android:id="@+id/tv_old"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_above="@+id/et_input"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="24dp" />

    <com.example.test.ui.CalculatorEditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/btn_layout"
        android:layout_alignParentLeft="true"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TableLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_func_add"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="func+"
                android:textAllCaps="false"
                android:textColor="@color/key_text_color"
                android:textSize="26sp" />

            <Button
                android:id="@+id/btn_clear"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="C"
                android:textAllCaps="false"
                android:textColor="@color/key_text_color"
                android:textSize="26sp" />

            <Button
                android:id="@+id/btn_del"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="del"
                android:textAllCaps="false"
                android:textColor="@color/key_text_color"
                android:textSize="26sp" />

            <Button
                android:id="@+id/btn_bracket_left"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="("
                android:textAllCaps="false"
                android:textColor="@color/key_text_color"
                android:textSize="26sp" />
            <Button
                android:id="@+id/btn_bracket_right"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text=")"
                android:textAllCaps="false"
                android:textColor="@color/key_text_color"
                android:textSize="26sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/symbol_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_span="5"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:background="@color/key_background_color"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none"></android.support.v7.widget.RecyclerView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_π"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="π"
                android:textAllCaps="false"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_7"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="7"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="8"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="9"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_div"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="÷"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_e"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="e"
                android:textAllCaps="false"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_4"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="4"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="5"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="6"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />
            <Button
                android:id="@+id/btn_mul"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="×"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_square"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="x^2"
                android:textAllCaps="false"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_1"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="1"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="2"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="3"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_sub"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="－"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_reciprocal"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="1/x"
                android:textAllCaps="false"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="0"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_dot"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="."
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_equal"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="="
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />
            <Button
                android:id="@+id/btn_add"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/key_background_color"
                android:text="＋"
                android:textColor="@color/key_text_color"
                android:textSize="32sp" />

        </TableRow>
    </TableLayout>


</RelativeLayout>
